<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mercury.pulse.views.PieChartView
        android:id="@+id/stats_piechart"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />

    <com.mercury.pulse.views.SmallPieChartView
        android:id="@+id/stats_piechart2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/stats_piechart"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/stats_piechart"
        android:paddingBottom="5dp" />

    <com.mercury.pulse.views.SmallPieChartView
        android:id="@+id/stats_piechart3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/stats_piechart"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/stats_piechart" />

    <TextView
        android:id="@+id/serverinfoactivity_CPUusage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stats_piechart"
        android:layout_alignLeft="@+id/stats_piechart"
        android:layout_marginLeft="75dp"
        android:fontFamily="sans-serif-condensed"
        android:text="CPU Usage"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/serverinfoactivity_RAMusage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignTop="@+id/stats_piechart2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/stats_piechart"
        android:fontFamily="sans-serif-condensed"
        android:text="RAM Usage"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/serverinfoactivity_HDDusage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stats_piechart3"
        android:layout_alignLeft="@+id/textView2"
        android:fontFamily="sans-serif-condensed"
        android:text="HDD Usage"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/serverinfoactivity_uptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stats_piechart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Uptime: 14 minutes"
        android:textColor="#777"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/serverinfoactivity_servername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Server Name"
        android:textColor="#777"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/serverinfoactivity_windowsversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="Windows Version"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#777"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/serverinfoactivity_serverpack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:text="Service Pack"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#777"
        android:textStyle="italic" />

</RelativeLayout>